<h1>Users CRUD</h1>

<main id="users">

  <form class="create">
    <div class="line">
      <label for="api">API:</label>
      <select id="api" required />
        <option value="array" selected>Server Array</option>
        <option value="fs">File System (JSON)</option>
        <option value="mongoose">Mongoose (MongoDB)</option>
      </select>
    </div>
    <div class="line">
      <label for="name">Nome:</label>
      <input type="text" id="name" required />
    </div>
    <div class="line">
      <label for="last_name">Sobrenome:</label>
      <input type="text" id="last_name" required />
    </div>
    <div class="line">
      <label for="age">Idade:</label>
      <input type="number" id="age" required />
    </div>
    <div class="line">
      <label for="email">E-mail:</label>
      <input type="email" id="email" required />
    </div>
    <div class="line">
      <input type="submit" id="add" value="Adicionar" />
    </div>
  </form>

  <table class="data">

    <thead>
      <th width="5%">ID</th>
      <th width="20%">Nome</th>
      <th width="25%">Sobrenome</th>
      <th width="10%">Idade</th>
      <th width="20%">E-mail</th>
      <th width="20%">Ações</th>
    </thead>
    <tbody id="users-tbody"></tbody>
  </table>

</main>